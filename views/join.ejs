<%- include('partials/header') %>

<main class="join-room-main">
  <section class="container_join-room">
    <div class="join-room">
      <h1>Join a Room</h1>
      <p>Enter the Room ID provided by the sender:</p>
      <div class="join-room-input">
        <input type="text" id="joinRoomID" placeholder="Enter Room ID" />
        <button onclick="joinRoom()">Join Room</button>
      </div>
    </div>
  </section>
</main>

<script>
  function joinRoom() {
    const roomID = document.getElementById("joinRoomID").value.trim();
    if (!roomID) {
      alert("Please enter a Room ID!");
      return;
    }
    localStorage.removeItem("isSender");
    window.location.href = `/room/${roomID}`;
  }
</script>

