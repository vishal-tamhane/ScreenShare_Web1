<%- include('partials/header') %>

<style>
  .screen-share-container {
    min-height: calc(100vh - 60px); /* Account for navbar height */
    padding: 2rem;
    background-color: #111;
    color: #fff;
  }

  .status-container {
    text-align: center;
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
  }

  .room-id {
    font-size: 1.5rem;
    font-weight: bold;
    color: #4CAF50;
    margin: 0.5rem 0;
  }

  .status-message {
    font-size: 1.2rem;
    margin: 0.5rem 0;
  }

  .screen-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #video {
    width: 100%;
    max-height: calc(100vh - 200px);
    border: 2px solid #333;
    border-radius: 10px;
    background-color: #000;
  }

  @media (max-width: 768px) {
    .screen-share-container {
      padding: 1rem;
    }

    .room-id {
      font-size: 1.2rem;
    }

    .status-message {
      font-size: 1rem;
    }

    #video {
      max-height: calc(100vh - 250px);
    }
  }
</style>

<div class="screen-share-container">
  <div class="status-container">
    <div class="room-id">Room ID: <%= roomID %></div>
    <div class="status-message" id="status">
      <% if (isSender) { %>
        Your screen sharing is live
      <% } else { %>
        Waiting for the sender to start sharing...
      <% } %>
    </div>
  </div>

  <div class="screen-container">
    <video id="video" autoplay playsinline></video>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/screenshare.js"></script>

<%- include('partials/footer') %>
